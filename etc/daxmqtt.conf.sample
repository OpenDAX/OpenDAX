-- The init_hook function will be run right after the connection
-- to the tag server is made.
function init_hook()
    tag_add("tag_1", "DINT", 1)
    tag_add("tag_2", "DINT", 1)
    tag_add("tag_3", "DINT", 1)
    tag_add("tag_4", "DINT", 4)
end


