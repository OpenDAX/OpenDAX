-- Raw subscriptions
-- If we don't set a format function then a raw binary copy
-- will be made to the tags given in the array 'tags' or the
-- string 'tag'
s = {}
s.topic = "dax_topic_1"
s.tags = {"tag_1", "tag_2", "tag_3"}
s.qos = 0
add_sub(s)

function format_1(topic, payload)
    print("Topic = " .. topic)
    print("Strlen = " .. string.len(payload))
    print(payload)
    tag_write("tag_1", tonumber(payload))
end

s = {}
s.topic = "dax_topic_2"
s.formatter = format_1
s.qos = 1
add_sub(s)


